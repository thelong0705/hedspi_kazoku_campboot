                    </div>
                    <div class="float-right">
                        <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <a style="padding:5px;"href ="<%= "/companies/#{@company.id}/edit" %>"><i class="fa fa-edit fa-1x"></i></a>
                        </li>
        
                        <li class="nav-item">
                            <%= link_to '<i class="fas fa-trash-alt fa-1x"></i>'.html_safe, @company, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="float-right">
              <ul class="nav justify-content-end">
                <li class="nav-item">
                  <a style="padding:5px;" href="<%= "/companies/#{@company.id}/edit" %>"><i class="fa fa-edit fa-1x"></i></a>
                </li>

                <li class="nav-item">
                  <%= link_to '<i class="fas fa-trash-alt fa-1x"></i>'.html_safe, @company, method: :delete, data: {confirm: 'Are you sure?'} %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <hr/>
      <h2>
        Comments
      </h2>
      <section id="comments-section">
        <ol id="comments">
          <%= render @comments %>
        </ol>

        <%= form_for [@company, @company.comments.new], remote: true do |f| %>
          <ol>
            <li>
              <%= f.text_area :content, rows: 2, cols: 60, placeholder: "Write your comment here" %>
            </li>
            <li>
              <%= f.submit 'Comment', class: 'button' %>
            </li>
          </ol>
        <% end %>
      </section>
    </div>
  </div>
</main>

