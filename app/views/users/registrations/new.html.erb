<main role="main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signup'}) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal" style="padding-bottom:10px;">Regist for free</h1>
    <div class="form-row">
      <div class="field form-group col-md-6">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>
      <div class="field form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="field form-group col-md-6">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      </div>
      <div class="field form-group col-md-6">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="field form-group col-md-8">
        <%= f.label :school, :for => "user_school" %>
        <%= f.text_field :school, :class => "form-control" %>
      </div>

      <div class="form-group col-md-4">
        <label for="user_school_year">Year</label>
        <select id="user_school_year" name="user[school_year]" class="form-control">
            <option selected>Choose...</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
      </div>
    </div>

    <div class="form-row">
      <div class="field form-group col-md-6">
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, 0, :class => "form-check-input" %>
          <label class="form-check-label" for="user_gender_0">Male</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, 1, :class => "form-check-input" %>
          <label class="form-check-label" for="user_gender_1">Female</label>
        </div>
      </div>
    </div>
    <%= devise_error_messages! %>
    <div class="actions">
      <%= f.submit "Sign up", :class => "col-md-6 btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
</main>

