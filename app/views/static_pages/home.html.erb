<main role="main">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="second-slide" src="https://mdbootstrap.com/img/Photos/Slides/img%20(68).jpg" alt="Second slide">
        <div class="container">
          <div class="carousel-caption">
            <h1>Looking for a job? </h1>
            <p>We provide useful information to help you landing your dream job</p>
            <p><a class="btn btn-lg btn-primary" href="/companies" role="button">Browse companies</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class = "row" style="justify-content:center; margin-bottom:40px">
            <h1>Some of our finest companies</h1>
            
      </div>
      <div class="row">
        <% @companies.sort_by{|company| company.average_review}.reverse!.first(6).each do |company| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="logo">
                <%= image_tag(company.picture.url,class:"img-thumbnail float comment-image") if company.picture? %>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="<%= "companies/#{company.id}" %>" class="btn btn-sm btn-outline-secondary"> View </a>
                  </div>
                  <div>
                    <br/>
                    <p>
                      <i class="fa fa-star fa_custom"></i> <%= company.average_review.round(1) %>
                      <i class="far fa-thumbs-up"></i> <%= company.get_upvotes.size %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
