<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert-danger">
      <p class="text-center">
        <%= pluralize object.errors.count, "error" %>
      <p>
    </div>
    <ul>
      <% object.errors.each do |key, msg| %>
        <li><%= key %> <%= msg %></li>
      <% end %>
      <div class="clearfix"></div>
    </ul>
  </div>
<% end %>
