<li>
  <div class="card" style="margin-bottom:10px;">
    <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
      <div class="panel-heading panel-heading-chat card-header">
        <%= link_to conversation.opposed_user(user).email, '', class: 'toggle-window' %>
        <%= link_to '<i class="far fa-window-close"></i>'.html_safe, close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
      </div>
      <div class="panel-body" style="display: none;">
        <div class="messages-list">
          <ul>
            <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
          </ul>
        </div>
        <form class="new_message">
          <div class ="container">
            <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
            <input name="user_id" type="hidden" value="<%= user.id %>">
            <textarea name="body" class="form-control"></textarea>
            <input type="submit" class="btn btn-success btn-send" value="Send">
          </div>
        </form>
      </div>
    </div>
  </div>
</li>
